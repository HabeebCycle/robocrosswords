<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
 
<PreferenceCategory
	android:title="Free Puzzle Downloads">
	<CheckBoxPreference
	android:title="Houston Chronicle"
	android:defaultValue="true"
	android:summary="Houston Chronicle Daily Puzzle"
	android:key="downloadChron"
	/>
	<CheckBoxPreference
	android:title="Los Angeles Times"
	android:defaultValue="true"
	android:summary="Los Angeles Times Daily Puzzle"
	android:key="downloadLat"
	/>
	<CheckBoxPreference
	android:title="Thinks.com"
	android:defaultValue="true"
	android:summary="Thinks.com Daily Puzzle"
	android:key="downloadThinks"
	/>
	<CheckBoxPreference
	android:title="The Onion AV Club"
	android:defaultValue="true"
	android:summary="The Onion AV Club Wednesday Puzzle"
	android:key="downloadAvClub"
	/>
	<CheckBoxPreference
	android:title="Ink Well"
	android:defaultValue="true"
	android:summary="InkWellXWords.com Friday Puzzle"
	android:key="downloadInkwell"
	/>
	<CheckBoxPreference
	android:title="The Wall Street Journal"
	android:defaultValue="true"
	android:summary="The WSJ Friday Puzzle"
	android:key="downloadWsj"
	/>
	<CheckBoxPreference
	android:title="Boston Globe"
	android:defaultValue="true"
	android:summary="Boston Globe Sunday Puzzle"
	android:key="downloadGlobe"
	/>
	<CheckBoxPreference
	android:title="Philadelphia Inquirer"
	android:defaultValue="true"
	android:summary="Philadelphia Inquirer Sunday Puzzle"
	android:key="downloadPhilly"
	/>
	
	
</PreferenceCategory>

<PreferenceCategory
	android:title="Other Puzzle Sources (Experimental)">
	
	<CheckBoxPreference
	android:title="Brendan Emmett Quigley"
	android:defaultValue="true"
	android:summary="brendanemmettquigley.com"
	android:key="scrapeBEQ"
	/>
	
	<Preference
 	android:title="About These Sources" 
 	android:key="aboutScrapes"/>
	
</PreferenceCategory>	

<PreferenceCategory
	android:title="New York Times Select Membership">
	<CheckBoxPreference
	android:title="NYT.com"
	android:defaultValue="false"
	android:summary="New York Times Daily Puzzle"
	android:key="downloadNYT"
	/>
	<EditTextPreference
	android:title="Username"
	android:summary="NYT Username or Email Address"
	android:key="nytUsername" />
	<EditTextPreference
	android:title="Password"
	android:summary="NYT Password"
	android:key="nytPassword" 
	/>
	</PreferenceCategory>
	 <PreferenceCategory
	android:title="Application Settings">
	<CheckBoxPreference
	android:title="Download on Startup"
	android:defaultValue="true"
	android:summary="Download today's puzzles when starting the application"
	android:key="dlOnStartup"
	/>
	
	<!--  <CheckBoxPreference
	android:title="Background Service"
	android:defaultValue="true"
	android:summary="Download new puzzles in the background"
	android:key="runService"
	/>-->
	
	<CheckBoxPreference
	android:title="Delete on Cleanup"
	android:defaultValue="false"
	android:summary="Delete rather than archive old puzzles"
	android:key="deleteOnCleanup"
	/>
	
	
	<CheckBoxPreference
	android:title="Snap to Current Word"
	android:defaultValue="true"
	android:summary="Toggles the auto-scrolling of the playboard to the current play position"
	android:key="ensureVisible"
	/>
	
	<CheckBoxPreference
	android:title="Scroll To Clue"
	android:defaultValue="false"
	android:summary="Toggles the auto-scrolling to the selected clue in the clues list mode. (Works like Shortyz 1)"
	android:key="snapClue"
	/>
	
	<CheckBoxPreference
	android:title="Skip Filled Boxes"
	android:defaultValue="false"
	android:summary="Toggles the skipping of filled boxes when you enter a new letter."
	android:key="skipFilled"
	/>
	
	<CheckBoxPreference
	android:title="No Download Notifications"
	android:defaultValue="false"
	android:summary="Prevents a notification for each puzzle downloaded from appearing in the notifications list."
	android:key="supressMessages"
	/>
 </PreferenceCategory>
	
	<PreferenceCategory
	android:title="About Shortyz">
	<Preference
 	android:title="Release Notes" 
 	android:key="releaseNotes"/>
 	
	</PreferenceCategory>
</PreferenceScreen>
